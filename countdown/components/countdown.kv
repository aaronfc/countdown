#:kivy 1.0.9
<CounterWidget>:
    Label:
        id: counter_label
        font_size: 160
        center_x: root.width / 2
        top: root.top / 2 + self.height / 2
        text: "05m00s"

<HeartImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
    source: 'assets/heart.png'
    size_hint: None, None
    allow_stretch: True

<HeartsSummary>:
    size_hint: None, None
    RelativeLayout:
        pos: self.parent.pos
        HeartImage:
            size_hint: None, None
            width: 100
            height: 100
            pos: 0, 50
            source: '../assets/heart.png'
            color: (1,0,0,1)
        Label:
            size_hint: None, None
            pos: 0, 0
            width: 100
            height: 50
            id: hearts_amount
            text: "22"
            font_size: 40

<PooImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
    source: 'assets/poo.png'
    size_hint: None, None
    allow_stretch: True

<WelcomeScreen>:
    FloatLayout:
        Label:
            id: title_label
            font_size: 160
            text: "#HMU28"
        Button:
            text: 'Goto Main'
            on_press: root.manager.current = 'main'
            size_hint: .2, .05
            pos: root.width - 20 - self.width, 20

<MainScreen>:
    counter_widget: counter_item
    FloatLayout:
        CounterWidget:
            id: counter_item
        Button:
            text: 'Back to welcome'
            on_press: root.manager.current = 'welcome'
            size_hint: .2, .05
            pos: root.width - 20 - self.width, 20

<SummaryScreen>:
    Label:
        size_hint: 1, None
        height: 160
        center_y: root.height/2
        x: 0
        id: main_label
        font_size: 160
        text: "TIME'S UP!"

    HeartsSummary:
        pos: root.width/2 - root.width/12 - self.width, root.height/2 - 160 - self.height
